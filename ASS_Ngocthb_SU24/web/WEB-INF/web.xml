<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ngocthb.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>ngocthb.main.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchCataCotroller</servlet-name>
        <servlet-class>ngocthb.controllers.SearchCataCotroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdUpdateCrsController</servlet-name>
        <servlet-class>ngocthb.controllers.ad.AdUpdateCrsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdCreateCrsController</servlet-name>
        <servlet-class>ngocthb.controllers.ad.AdCreateCrsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>ngocthb.controller.cart.AddToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFromCartController</servlet-name>
        <servlet-class>ngocthb.controller.cart.RemoveFromCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartController</servlet-name>
        <servlet-class>ngocthb.controller.cart.UpdateCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateOrderController</servlet-name>
        <servlet-class>ngocthb.controller.order.CreateOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchOrderController</servlet-name>
        <servlet-class>ngocthb.controller.order.SearchOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>ngocthb.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdSearchController</servlet-name>
        <servlet-class>ngocthb.controllers.ad.AdSearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchCataCotroller</servlet-name>
        <url-pattern>/SearchCataCotroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdUpdateCrsController</servlet-name>
        <url-pattern>/AdUpdateCrsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdCreateCrsController</servlet-name>
        <url-pattern>/AdCreateCrsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/AddToCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFromCartController</servlet-name>
        <url-pattern>/RemoveFromCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCartController</servlet-name>
        <url-pattern>/UpdateCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateOrderController</servlet-name>
        <url-pattern>/CreateOrderController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchOrderController</servlet-name>
        <url-pattern>/SearchOrderController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdSearchController</servlet-name>
        <url-pattern>/AdSearchController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            1
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
</web-app>
